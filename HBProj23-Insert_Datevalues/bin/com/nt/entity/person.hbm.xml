<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
<class name="com.nt.entity.PersonInfo" table="PERSON_INFO">
	      <id name="pid" column="PID" type="int" >
	        <generator class="sequence"></generator>
	      </id>
	     <property name="pname" column="PNAME" type="string" length="15" />
	     <property name="padd" column="PADD" type="string" length="18"  />
	     <!--  <property name="doj" column="DOJ" type="time"     [time datatype will Store only Date Values not Time Values  />     
	         <property name="dom" column="DOM" type="time"  /> -->
	   <property name="dob" column="DOB" type="timestamp"/>
	   <property name="doj" column="DOJ" type="timestamp"/>
	    <property name="dom" column="DOM" type="timestamp"/>
	  
	         
	</class>
</hibernate-mapping>	